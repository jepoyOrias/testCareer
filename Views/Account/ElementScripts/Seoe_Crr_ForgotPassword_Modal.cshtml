                                <input type="text" class="form-control crr-create-acc-input border-none" id="#" placeholder="">
                            </div>
                        </form>
                    </div>
                    <div class="margin-top30">
                        <button class="btn btn-cta font-semibold" type="submit" data-dismiss="modal" aria-label="Submit" data-toggle="modal" data-target="#SignInCreateAccount7thStepModal">Send</button>
                    </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
