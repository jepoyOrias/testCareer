@{
    Seog_Crr_Log objLog = new Seog_Crr_Log();
}

@try
{
    <div class="display-flex flex-justify-content-between flex-wrap">
        <div class="crr-filter-buttons">
            @{
                var isMobile = Request.Browser.IsMobileDevice;
            }
            <div class="@(isMobile ?  "btn-group-vertical" : "btn-group")   flex-div flex-nowrap flex-basis-fill" role="group" aria-label="...">
                <button type="button" class="btn btn-default border-blue">All</button>
                <button type="button" class="btn btn-default border-blue">Past 24 Hours</button>
                <button type="button" class="btn btn-default border-blue">Past Week</button>
                <button type="button" class="btn btn-default border-blue">Past Month</button>
                <button type="button" class="btn btn-default border-blue">3 Days Ago</button>
                <button type="button" class="btn btn-default border-blue">5 Days Ago</button>
            </div>
        </div>
        <div class="crr-view-more-filter-btn collapse-on-desktop">
            <a href="#" class="crr-text-blue">view more</a>
        </div>
    </div>
}
catch (Exception ex)
{
    objLog.SalError("Seoe_Crr_JobSearch_Filter_DatePosted.cshtml", ex);
}