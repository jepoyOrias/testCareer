@{
    Seog_Crr_Log objLog = new Seog_Crr_Log();
}

@try
{
    <div class="bg-grayfill crr-adv-card">
        <div class="crr-adv-header">
            <div class="crr-adv-image">
                <img class="media-object" src="~/Images/most-recent-job-postings.svg">
            </div>
            <div class="crr-adv-title margin-top20">
                <h4 class="crr-title-h4">
                    Most Recent
                    Job Postings
                </h4>
                <button class="btn btn-default crr-btn-blue margin-top30" type="button">Search for More Jobs</button>
            </div>
        </div>

        <div class="crr-seemore-mobile collapse-on-desktop" onclick="javascript: toggleSeeMoreMobile(this)">
            <div class="font-bold crr-text-blue">See Recent Posting</div>
            <span class="icon-chevron-right crr-text-blue font-bold rotate180"></span>
        </div>
        <hr class="crr-adv-hr collapse-on-mobile" />

        <div class="crr-jobs-list-wrapper collapse-on-mobile">
            <div class="crr-text-primarydark font-bold text-center text-size13">Recent Searches</div>
            <div class="crr-adv-jobs-lists margin-top30">
                @for (var count = 0; count <= 4; count++)
                {
                    <div class="crr-adv-job-list cursor-pointer">
                        <div class="crr-adv-desc crr-adv-flex-col flex-grow-1">
                            <div class="crr-item-title crr-text-blue font-bold text-size17">Account Coordinator</div>
                            <div class="text-size15">Waltham, MA </div>
                        </div>
                        <div class="crr-adv-actions display-flex flex-align-item-end">
                            <a href="" class="crr-text-blue text-size15">222 new <span class="text-black">listings</span></a>
                        </div>
                    </div>
                }
            </div>
            <div class="display-flex flex-justify-content-center margin-top30">
                <button class="btn btn-default  text-blue font-bold show-more-btn collapse-on-desktop" type="submit">Show more <span class="icon-crr-expandArrow text-blue text-size12 margin-left20 "></span></button>
                <button class="btn btn-default border-crr-blue text-blue font-bold collapse-on-mobile " type="submit">Start New Search</button>
            </div>
        </div>

    </div>
}
catch (Exception ex)
{
    objLog.SalError("Seoe_Crr_Index_AdvanceCareer_JobPostings.cshtml", ex);
}