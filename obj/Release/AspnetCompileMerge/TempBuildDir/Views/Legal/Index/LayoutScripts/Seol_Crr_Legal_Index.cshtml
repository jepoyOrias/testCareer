else
{
    @Styles.Render($"~/Styles/ElementStyles/CSS/Seos_Crr_Legal.min.css?RelNum={ViewBag.ReleaseNum}")
}

<div class="crr-layout-container">
    @RenderPage("~/Views/Legal/Index/ElementScripts/Seoe_Crr_Legal_Index.cshtml")
</div>