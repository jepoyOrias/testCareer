@* Account Confirmation modal *@
<div class="modal" id="SignInCreateAccount3rdStepModal" tabindex="-1" role="dialog" aria-labelledby="SignInCreateAccount3rdStepModal">
    <div class="modal-dialog modal-lg crr-modal-center" role="document">
        <div class="modal-content">
            <div class="modal-header crr-no-display crr-display-block padding-bottom0">
                <button type="button" class="close crr-modal-close crr-no-display crr-display-block" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="text-bluedark text-size25 font-regular">&times;</span></button>
            </div>
            <div class="modal-header crr-modal-header-media padding-bottom0 padding-top20">
                <button type="button" class="close crr-modal-close crr-display-none" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="text-bluedark text-size25 font-regular">&times;</span></button>
                <h3 class="crr-modal-title modal-title">Confirm Your Email</h3>
            </div>
            <div class="modal-body padding-top20 margin-bottom30">
                <div class="text-size16">We've sent a confirmation email to <b> myemail@something.com </b></div>
                <div class="crr-modal-flex-col margin-top20">
                    <div>
                        <form class="crr-modal-flex-row crr-flex-wrap-modal">

                            <div class="form-group margin-bottom25 col-sm-9 crr-media-max-width padding-left0 padding-right15 padding-bottom0">
                                <label for="#" class="text-size16 font-semibold crr-text-primary text-transform-none margin-bottom10 ">Verify Code</label>
                                <input type="text" class="form-control crr-create-acc-input border-none" id="#" placeholder="">
                            </div>
                            <div class="crr-modal-flex-col crr-display-none crr-flex-align-self-center margin-top10">
                                <a href="#" class="text-size14">Resend Confirmation Email</a>
                                <div class="text-size14"><span class="icon-check crr-icon-check margin-right5"></span>Email resent</div>
                            </div>
                            <div class="crr-modal-flex-col crr-no-display crr-display-block margin-top20">
                                <a href="#" class="text-size14">Resend Confirmation Email</a>
                                <div class="text-size14"><span class="icon-check crr-icon-check margin-right5"></span>Email resent</div>
                            </div>

                        </form>
                    </div>
                    <div class="margin-top30">
                        <button class="btn btn-cta font-semibold" type="submit" data-dismiss="modal" aria-label="Submit" data-toggle="modal" data-target="#SignInCreateAccount4thStepModal">Submit</button>
                    </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
