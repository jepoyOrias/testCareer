@{
    Seog_Crr_Log objLog = new Seog_Crr_Log();
}

@try
{
<div class="crr-top-companies-layout">
    <h5 class="crr-top-companies">Top companies</h5>
    <div class="crr-search-results">
        @{

            string[] companies = { "360 Concept", "Microsoft", "Google" };
            Random random = new Random();
        }

        @for (var count = 0; count <= 4; count++)
        {
            Int32 Index = random.Next(0, companies.Length);
            var companyName = companies[Index];

            //We need to create a url for each item here For now i will use a static url

            <div class="crr-top-companies-lists crr-search-result-drill-in">
                <div class="crr-company-info">
                    <div>
                        <a href="#">
                            <img class="crr-company-logo" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true">
                        </a>
                    </div>
                    <div class="crr-company-desc crr-adv-flex-col">
                        <div class="crr-search-item-title crr-text-primary font-bold">@companyName</div>
                        <p class="crr-search-job-counts text-size13 crr-text-blue">2 Jobs</p>
                        <p class="text-size12"><span class="text-charcoal margin-right5">INDUSTRY </span>Advertising/Marketing/PR</p>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="display-flex flex-justify-content-center">
        <button class="btn btn-default  text-blue font-bold show-more-btn collapse-on-desktop  margin-top30" type="submit">Show more <span class="icon-crr-expandArrow text-blue text-size12 margin-left20 "></span></button>
    </div>
    <div class="crr-top-companies-show-more collapse-on-mobile">
        <a href="#" class="crr-text-blue text-center">Show more</a>
    </div>
</div>
}
catch (Exception ex)
{
    objLog.SalError("Seoe_Crr_Index_LoggedIn_TopCompanies.cshtml", ex);
}