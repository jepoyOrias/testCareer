@{
    Seog_Crr_Log objLog = new Seog_Crr_Log();
}

@try
{
    <div class="modal" id="SignInCreateAccount1stStepModal" tabindex="-1" role="dialog" aria-labelledby="SignInCreateAccount1stStepModal">
        <div class="modal-dialog modal-lg  crr-modal-center" role="document">
            <div class="modal-content">
                <div class="modal-header crr-no-display crr-display-block padding-bottom0">
                    <button type="button" class="close crr-modal-close crr-no-display crr-display-block" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="text-bluedark text-size25 font-regular">&times;</span></button>
                </div>
                <div class="modal-header padding-top20 crr-modal-header-media">
                    <button type="button" class="close crr-modal-close crr-display-none" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="text-bluedark text-size25 font-regular">&times;</span></button>
                    <h3 class="crr-modal-title modal-title">Sign In / Create Account</h3>
                </div>
                <div class="modal-body margin-bottom30">
                    <div class="display-flex crr-flex-wrap-modal">
                        <div class="crr-modal-flex-col crr-margin-none margin-top25">

                            <div id="buttonDiv"></div>

                            <button class="btn btn-default btn-lg crr-user-login-choice-button font-semibold text-size16 margin-bottom20">
                                <span><img src="~/Images/social_icon_alpple.svg"></span><span class="margin-auto">Continue with Apple</span>
                            </button>

                            <!-- Display login status -->

                            <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
                            </fb:login-button>

                            <div id="status">
                            </div>

                            <button class="btn btn-default btn-lg crr-user-login-choice-button font-semibold text-size16 margin-bottom20" id="fblink" onclick="fbLogin()">
                                <span><img src="~/Images/social_icon_facebook.svg"></span><span class="margin-auto">Continue with Facebook</span>
                            </button>
                        </div>
                            <div class="crr-modal-gray-horizontal-div"></div>
                            <div class="crr-modal-gray-vertical-div margin-top25 margin-bottom20"></div>
                            <div class="crr-modal-flex-col">
                                <div class="text-size16 margin-top5 margin-bottom30">Or use my email address</div>
                                <form>
                                    <div class="form-group margin-bottom40">
                                        <label for="exampleInputEmail1" class="text-size16 font-semibold crr-text-primary text-transform-none margin-bottom10">Email address</label>
                                        <input type="email" class="form-control crr-create-acc-input border-none" id="#" placeholder="">
                                    </div>
                                    <button class="btn btn-cta font-semibold collapse-on-mobile" type="submit" data-dismiss="modal" aria-label="Continue" data-toggle="modal" data-target="#SignInCreateAccount2ndStepModal">Continue<span class="icon-arrow-circle-right icon-right"></span></button>
                                    <button class="btn btn-cta btn-lg btn-block font-semibold crr-no-display crr-display-block" type="submit" data-dismiss="modal" aria-label="Continue" data-toggle="modal" data-target="#SignInCreateAccount2ndStepModal">Continue<span class="icon-arrow-circle-right icon-right"></span></button>
                                    <a href="#" class="text-size16 font-regular crr-no-display crr-display-block text-center margin-top40">Are you an employer?</a>
                                </form>
                            </div>
                        </div>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    
    //Sign In Password Modal
    <div class="modal" id="SignInCreateAccount5thStepModal" tabindex="-1" role="dialog" aria-labelledby="SignInCreateAccount5thStepModal">
        <div class="modal-dialog modal-lg crr-modal-center" role="document">
            <div class="modal-content">
                <div class="modal-header padding-bottom0">
                    <button type="button" class="close crr-modal-close " data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="text-bluedark text-size25 font-regular">&times;</span></button>
                    <a class="text-size16 crr-text-blue cursor-pointer" data-dismiss="modal" aria-label="Back" data-toggle="modal" data-target="#SignInCreateAccount4thStepModal"><span class="icon-arrow-left icon-left text-size12 margin-right5"></span>Back</a>
                </div>
                <div class="modal-header crr-modal-header-media padding-bottom0 padding-top15 padding-left15">
                    <h3 class="crr-modal-title modal-title col-sm-7">Sign In</h3>
                </div>

                <div class="modal-body margin-bottom30">
                    <div class="crr-modal-flex-col margin-top20">
                        <div>
                            <div class="form-group crr-max-width margin-bottom15">
                                <label for="#" class="text-size16 font-semibold crr-text-primary text-transform-none margin-bottom10 ">Username</label>
                                <div class=" border-none bg-none crr-create-acc-input text-size16 font-semibold">myemail@something.com</div>
                            </div>
                            <form class="crr-modal-flex-row crr-flex-wrap-modal">
                                <div class="form-group margin-bottom25 col-sm-9 crr-media-max-width padding-left0 padding-right15 padding-bottom0">
                                    <label for="#" class="text-size16 font-semibold crr-text-primary text-transform-none margin-bottom10 ">Password</label>
                                    <input type="text" class="form-control crr-create-acc-input border-none" id="#" placeholder="">
                                </div>
                                <div class="crr-modal-flex-col crr-display-none crr-flex-align-self-center margin-top10">
                                    <a href="#" class="text-size14">Forgot Password?</a>
                                </div>
                                <div class="crr-modal-flex-col crr-no-display crr-display-block margin-top20">
                                    <a href="#" class="text-size14">Forgot Password?</a>
                                </div>

                            </form>
                        </div>
                        <div class="margin-top30">
                            <button class="btn btn-cta font-semibold" type="submit" data-dismiss="modal" aria-label="Submit" data-toggle="modal" data-target="#SignInCreateAccount6thStepModal">Submit</button>
                        </div>
                    </div>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

}
catch (Exception ex)
{
    objLog.SalError("Seoe_Crr_SignIn_Modal.cshtml", ex);
}